<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray02"
    android:gravity="left"
    android:padding="16dp">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_single_view_notification"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"

            android:layout_gravity="center"
            android:src="@drawable/ic_add"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />








        <TextView
            android:id="@+id/txt_itemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center_horizontal"
            android:text="[Item Name]"

            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="#17395C" />


        <TextView
            android:id="@+id/txt_itemstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center"
            android:text="[Status]"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#17395C" />


        <TextView
            android:id="@+id/txt_itemlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left"
            android:text="Location:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             />


        <TextView
            android:id="@+id/editTextItemLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left"
            android:text="[Location]"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#17395C" />

        <TextView
            android:id="@+id/txt_datereported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left"
            android:text="Date Reported:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             />

        <TextView
            android:id="@+id/editTextDateReported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left"
            android:text="[Date]"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#17395C" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left"
            android:text="Description:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             />


        <TextView
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left"
            android:text="[Description]"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#17395C" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonClose"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_delete"
            android:fontFamily="@font/montserrat_medium"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonClaimed"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-48dp"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@+id/image_single_view_notification"
            android:background="@drawable/button_signin"
            android:fontFamily="@font/montserrat_medium"
            android:text="Claim"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

